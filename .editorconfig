root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.js]
indent_size = 2
indent_style = space

[*.{html,liquid}]
indent_size = 2
indent_style = space

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

[Gemfile*]
indent_size = 2
indent_style = space
